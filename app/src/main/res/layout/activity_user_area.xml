<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_area"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.div.logintest.UserAreaActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:text="Name"
        android:layout_width="180dp"
        android:layout_height="30dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        android:id="@+id/tvWelcome"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        app:layout_constraintLeft_toLeftOf="@+id/activity_user_area"
        android:layout_marginStart="16dp"
        tools:layout_constraintLeft_creator="0"
        app:layout_constraintTop_toTopOf="@+id/activity_user_area"
        android:layout_marginTop="16dp"
        tools:layout_constraintTop_creator="0" />

    <TextView
        android:text="Name"
        android:layout_width="78dp"
        android:layout_height="17dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="54dp"
        android:id="@+id/textView4"
        app:layout_constraintLeft_toLeftOf="@+id/activity_user_area"
        android:layout_marginStart="16dp"
        tools:layout_constraintLeft_creator="0"
        app:layout_constraintTop_toBottomOf="@+id/tvWelcome"
        android:layout_marginTop="8dp"
        tools:layout_constraintTop_creator="0" />

    <ImageView
        android:src="@android:drawable/ic_menu_camera"
        android:layout_width="110dp"
        android:layout_height="110dp"
        tools:layout_editor_absoluteX="234dp"
        tools:layout_editor_absoluteY="16dp"
        android:id="@+id/imgProfilePic"
        app:layout_constraintTop_toTopOf="@+id/activity_user_area"
        android:layout_marginTop="16dp"
        tools:layout_constraintTop_creator="0"
        app:layout_constraintRight_toRightOf="@+id/activity_user_area"
        android:layout_marginEnd="16dp"
        tools:layout_constraintRight_creator="0" />

    <TextView
        android:text="Username"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="79dp"
        android:id="@+id/tvUsername"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:layout_width="180dp"
        android:textColor="@color/abc_input_method_navigation_guard"
        app:layout_constraintLeft_toLeftOf="@+id/activity_user_area"
        android:layout_marginStart="16dp"
        tools:layout_constraintLeft_creator="0"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:layout_marginTop="8dp"
        tools:layout_constraintTop_creator="0" />

    <TextView
        android:text="Username"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="108dp"
        android:id="@+id/textView3"
        android:layout_width="70dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_user_area"
        android:layout_marginStart="16dp"
        tools:layout_constraintLeft_creator="0"
        app:layout_constraintTop_toBottomOf="@+id/tvUsername"
        android:layout_marginTop="8dp"
        tools:layout_constraintTop_creator="0" />

    <TextView
        android:text="Change Profile Picture"
        android:layout_width="106dp"
        android:layout_height="11dp"
        tools:layout_editor_absoluteX="238dp"
        tools:layout_editor_absoluteY="132dp"
        android:id="@+id/tvChangeProfile"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="@+id/imgProfilePic"
        tools:layout_constraintLeft_creator="0"
        app:layout_constraintTop_toBottomOf="@+id/tvUsername"
        android:layout_marginTop="32dp"
        tools:layout_constraintTop_creator="0"
        app:layout_constraintRight_toRightOf="@+id/imgProfilePic"
        tools:layout_constraintRight_creator="0"
        app:layout_constraintHorizontal_bias="1.0" />

</android.support.constraint.ConstraintLayout>
