<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.div.logintest.LoginActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="140dp"
        android:id="@+id/etUsername"
        app:layout_constraintLeft_toLeftOf="@+id/activity_login"
        tools:layout_constraintLeft_creator="0"
        app:layout_constraintTop_toTopOf="@+id/activity_login"
        android:layout_marginTop="140dp"
        tools:layout_constraintTop_creator="0"
        app:layout_constraintRight_toRightOf="@+id/activity_login"
        tools:layout_constraintRight_creator="0"
        android:hint="Username" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="206dp"
        android:id="@+id/etPassword"
        app:layout_constraintLeft_toLeftOf="@+id/activity_login"
        tools:layout_constraintLeft_creator="0"
        app:layout_constraintTop_toBottomOf="@+id/etUsername"
        android:layout_marginTop="24dp"
        tools:layout_constraintTop_creator="0"
        app:layout_constraintRight_toRightOf="@+id/activity_login"
        tools:layout_constraintRight_creator="0"
        android:hint="Password" />

    <Button
        android:text="Login"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="280dp"
        android:id="@+id/btnLogin"
        android:layout_width="140dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_login"
        android:layout_marginStart="16dp"
        tools:layout_constraintLeft_creator="0"
        app:layout_constraintTop_toBottomOf="@+id/etPassword"
        android:layout_marginTop="32dp"
        tools:layout_constraintTop_creator="0"
        app:layout_constraintRight_toRightOf="@+id/activity_login"
        android:layout_marginEnd="16dp"
        tools:layout_constraintRight_creator="0" />

    <TextView
        android:text="Or sign up here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="360dp"
        android:id="@+id/tvRegister"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="@+id/activity_login"
        android:layout_marginStart="8dp"
        tools:layout_constraintLeft_creator="0"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin"
        android:layout_marginTop="32dp"
        tools:layout_constraintTop_creator="0"
        app:layout_constraintRight_toRightOf="@+id/activity_login"
        android:layout_marginEnd="8dp"
        tools:layout_constraintRight_creator="0"
        android:textColor="?android:attr/colorMultiSelectHighlight" />

    <TextView
        android:text="Welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="24dp"
        android:id="@+id/textView2"
        android:textAppearance="@android:style/TextAppearance.Material.Display2"
        android:fontFamily="casual"
        app:layout_constraintLeft_toLeftOf="@+id/activity_login"
        android:layout_marginStart="8dp"
        tools:layout_constraintLeft_creator="0"
        app:layout_constraintTop_toTopOf="@+id/activity_login"
        android:layout_marginTop="24dp"
        tools:layout_constraintTop_creator="0"
        app:layout_constraintRight_toRightOf="@+id/activity_login"
        android:layout_marginEnd="8dp"
        tools:layout_constraintRight_creator="0"
        android:textColor="@color/colorPrimary" />
</android.support.constraint.ConstraintLayout>
